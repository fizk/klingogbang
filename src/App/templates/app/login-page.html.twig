{% extends '@layout/default.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
    <main>
        {% if user_session %}
            <a href="{{ path('logout-submit') }}">logout</a>
        {% else %}
            <form method="post" action="{{ path('login-submit') }}">
                <input type="text" name="username" />
                <input type="password" name="password" />
                <input type="submit" />
            </form>

        {% endif %}
    </main>
{% endblock %}
